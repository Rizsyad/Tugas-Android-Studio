<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="7dp"-->
<!--            android:background="@drawable/tombol_edge"-->
<!--            android:text="Android 1.5 Cupcake" />-->

    </LinearLayout>

</ScrollView>